{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Execute code in current file",
        "type": "pwa-node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "deno",
        "runtimeArgs": ["run", "${file}"]
      },
      {
        "name": "Run tests in current file",
        "type": "pwa-node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "deno",
        "runtimeArgs": ["test", "${file}"],
        "console": "integratedTerminal"
      }
